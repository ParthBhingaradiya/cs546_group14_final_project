{{> header}}

{{itemName}}

<div class="product-sec">
    <div class="container">
        {{#if itemDatas}}
        <div class="head">
            <h1>Products</h1>
        </div>

        <div class="row">

            {{#each itemDatas}}
            <div class="pro-box">
                <div class="product-grid">
                    <div class="product-image">
                        {{!-- <a href="/{{_id}}" class="image"> --}}
                            {{#if photos.length}}
                            <img class="img-1" src="{{base_url}}/img/{{photos.[0]}}">
                            {{else}}
                            <img class="img-1" src="{{base_url}}/img/noImage.jpg">
                            {{/if}}
                            {{!-- </a> --}}

                    </div>
                    <div class="product-content">
                        {{!-- <h3 class="title"><a href="/{{_id}}">{{itemName}}</a></h3> --}}
                        <h3 class="title"><a href="#">{{itemName}}</a></h3>
                        <div class="price">${{itemPrice}}</div>
                    </div>

                    <a href="/item/addreview/?id={{userId}}">Add Review</a>
                </div>
            </div>
            {{/each}}



        </div>
        {{else}}
        <h1>No data Found</h1>
        {{/if}}
    </div>

</div>


{{> footer}}