<style>
   .left-column {
      text-align: unset;
   }

   .buynow-btn {
      margin-top: 20px;
   }
</style>
{{> header}}
<main class="pro-detail container">
   <div class="left-column">
      <div>
         <form action="/item/thankyou" method="post">
            <!-- Name -->
            <div class="md-form md-outline">
               <label for="form75">Name</label>
               <input type="text" id="form75" name="name" class="form-control pr-6" required>
               <input type="hidden" id="form75" name="id" value="{{id}}" class="form-control pr-6">
            </div>
            <!-- address -->
            <div class="md-form md-outline">
               <label for="form75">Address</label>
               <input type="text" name="address" id="form75" class="form-control pr-6" required>
            </div>
            <!-- phone number -->
            <div class="md-form md-outline">
               <label for="form75">Phone No.</label>
               <input type="number" name="phone_no" id="form75" class="form-control pr-6" required>
            </div>
            <!-- Email -->
            <div class="md-form md-outline">
               <label for="form77">Email</label>
               <input type="email" name="email" id="form77" class="form-control pr-6" required>
            </div>
            <!-- card holder name -->
            <div class="md-form md-outline">
               <label for="form77">Card Holder Name</label>
               <input type="text" name="card_name" id="form77" class="form-control pr-6" required>
            </div>
            <!-- card number -->
            <div class="md-form md-outline">
               <label for="form77">Card Number</label>
               <input type="number" name="card_number" id="form77" class="form-control pr-6" required>
            </div>
            <!-- cvv -->
            <div class="md-form md-outline">
               <label for="form77">Cvv</label>
               <input type="number" name="cvv" id="form77" class="form-control pr-6" required>
            </div>
            <!-- card holder name -->
            <div class="md-form md-outline">
               <label for="form77">Expiry date</label>
               <input type="date" name="expiry_date" id="form77" class="form-control pr-6" required>
            </div>
            <div class="text-right pb-2">
               <input type="submit" value="Place Order" class="buynow-btn">
            </div>
         </form>
      </div>
   </div>

</main>

{{> footer}}